    {
      "parameters": {
        "operation": "executeQuery",
        "query": "SELECT \n  COALESCE(SUM(profit_loss), 0) as total_pnl,\n  (SELECT current_equity FROM accounts LIMIT 1) as balance\nFROM trades \nWHERE DATE(entry_time) = CURRENT_DATE\n  AND status = 'CLOSED';",
        "options": {}
      },
      "id": "check-daily-loss",
      "name": "Check Daily Loss Limit",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2.4,
      "position": [
        460,
        300
      ],
      "credentials": {
        "postgres": {
          "id": "1",
          "name": "PostgreSQL - Trading DB"
        }
      }
    },
    {
      "parameters": {
        "jsCode": "// Check if daily loss exceeds 5% limit\nconst totalPnl = $input.item.json.total_pnl || 0;\nconst balance = $input.item.json.balance || 10000;\nconst maxDailyLoss = balance * 0.05; // 5% max daily loss\n\nconst lossPercent = (totalPnl / balance) * 100;\n\nreturn {\n  json: {\n    totalPnl,\n    balance,\n    maxDailyLoss,\n    lossPercent,\n    exceedsLimit: totalPnl < -maxDailyLoss,\n    signal: $input.first().json\n  }\n};"
      },
      "id": "calculate-daily-loss",
      "name": "Calculate Daily Loss",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        680,
        300
      ]
    },
    {
      "parameters": {
