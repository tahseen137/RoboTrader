          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "loss-check",
              "leftValue": "={{ $json.exceedsLimit }}",
              "rightValue": false,
              "operator": {
                "type": "boolean",
                "operation": "equals"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "id": "daily-loss-gate",
      "name": "Daily Loss Gate",
      "type": "n8n-nodes-base.if",
