    {
      "parameters": {
        "jsCode": "// Calculate position size (2% of account equity)\nconst balance = $input.item.json.current_equity || 10000;\nconst positionSizePercent = 0.02; // 2% of account equity\nconst currentPrice = $input.first().json.signal?.currentPrice || $input.first().json.currentPrice;\n\nconst positionValue = balance * positionSizePercent;\nconst quantity = Math.floor(positionValue / currentPrice);\n\nif (quantity < 1) {\n  return { json: { error: 'Position size too small', quantity: 0 } };\n}\n\nreturn {\n  json: {\n    symbol: $input.first().json.signal?.symbol || $input.first().json.symbol,\n    quantity,\n    currentPrice,\n    positionValue,\n    accountBalance: balance\n  }\n};"
      },
